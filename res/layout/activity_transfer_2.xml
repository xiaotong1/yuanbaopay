<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/formal_activity_background" >

    <include layout="@layout/title_back_and_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_marginTop="8dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            android:background="@color/color_white"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="60dp"
                android:layout_height="@dimen/text_height"
                android:layout_marginLeft="16dp"
                android:gravity="center|left"
                android:text="对方账户"
                android:textSize="@dimen/font_medium" />

            <EditText
                android:id="@+id/edtTxt_account_transfer_2"
                android:layout_width="200dp"
                android:layout_height="@dimen/text_height"
                android:layout_marginLeft="30dp"
                android:background="@null"
                android:hint="请程序员获取用户本人姓名"
                android:textSize="@dimen/font_medium" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="?android:attr/listDivider" />

        <Button
            android:id="@+id/btn_next_to_transfer3"
            style="@style/common_button_style_green"
            android:layout_width="@dimen/btn_weight"
            android:layout_height="@dimen/btn_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="下一步" />
    </LinearLayout>

</RelativeLayout>