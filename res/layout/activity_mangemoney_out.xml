<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/formal_activity_background"
    android:orientation="vertical" >

    <include layout="@layout/title_back_and_title" >
    </include>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:layout_marginTop="20dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:gravity="center|left"
            android:text="金额" />

        <EditText
            android:id="@+id/edtTxt_moneyout_mmout"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="本次最多可转出XXX（请程序员读取用户余额宝的余额）元"
            android:textColorHint="@color/gray_bg"
            android:textSize="16dp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="?android:attr/listDivider" />
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_height"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:background="@null"
            android:text="该账户本次转账额度为50,000元"
            android:textColor="@color/grey_text" />

        <TextView
            android:id="@+id/tv_explainlimite_mmout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_height"           
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginRight="16dp"
            android:background="@null"
            android:text="限额说明"
            android:textColor="@color/blue_text" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_ensure_mmout"
            style="@style/common_button_style_green"
            android:layout_width="@dimen/btn_weight"
            android:layout_height="@dimen/btn_height"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:text="确认转出" />
    </LinearLayout>
</LinearLayout>