<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/formal_activity_background"
    android:orientation="vertical" >

    <include layout="@layout/title_back_and_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_white"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/mgView_portrait_changeinfo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_launcher" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:layout_marginTop="10dp"
        android:background="@color/color_white"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_height"
            android:src="@drawable/name" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="@dimen/text_height"
            android:gravity="center|left"
            android:text="姓名" 
            android:textSize="@dimen/font_medium" />

        <EditText
            android:id="@+id/edTxt_name_changeinfo"
            android:layout_width="80dp"
            android:layout_height="@dimen/text_height"
            android:layout_marginLeft="30dp"
            android:background="@null"
            android:text="zhang"
            android:textSize="@dimen/font_medium" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:background="@color/color_white"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_height"
            android:src="@drawable/nickname" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="@dimen/text_height"
            android:gravity="center|left"
            android:text="昵称" 
            android:textSize="@dimen/font_medium" />

        <EditText
            android:id="@+id/edTxt_nickname_changeinfo"
            android:layout_width="80dp"
            android:layout_height="@dimen/text_height"
            android:layout_marginLeft="30dp"
            android:background="@null"
            android:text="hotdog"
            android:textSize="@dimen/font_medium" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:background="@color/color_white"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_height"
            android:src="@drawable/sex" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="@dimen/text_height"
            android:background="@null"
            android:gravity="center|left"
            android:text="性别" />

        <EditText
            android:id="@+id/edTxt_sex_changeinfo"
            android:layout_width="80dp"
            android:layout_height="@dimen/text_height"
            android:layout_marginLeft="30dp"
            android:background="@null"
            android:text="男"
            android:textSize="@dimen/font_medium" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:layout_marginTop="10dp"
        android:background="@color/color_white"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_height"
            android:src="@drawable/id" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="@dimen/text_height"
            android:gravity="center|left"
            android:text="身份证号" />

        <EditText
            android:id="@+id/edTxt_idnum_changeinfo"
            android:layout_width="190dp"
            android:layout_height="@dimen/text_height"
            android:layout_marginLeft="30dp"
            android:background="@null"
            android:text="412727"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:background="@color/color_white"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_height"
            android:src="@drawable/phone" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="@dimen/text_height"
            android:gravity="center|left"
            android:text="绑定手机" />

        <EditText
            android:id="@+id/edTxt_phonenum_changeinfo"
            android:layout_width="120dp"
            android:layout_height="@dimen/text_height"
            android:layout_marginLeft="30dp"
            android:background="@null"
            android:text="18066082826"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="?android:attr/listDivider" />

    <Button
        style="@style/common_button_style_green"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_save_info"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="保存修改"/>

</LinearLayout>