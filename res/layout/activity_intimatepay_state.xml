<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/title_back_and_title" >
    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/intimate_allbg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="196dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_portrait1_intistate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="56dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow" />

            <ImageView
                android:id="@+id/img_portrait2_intistate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:src="@drawable/ic_launcher" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_payforsb_intistate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="为xxx亲密付"
            android:textColor="@color/pink_btn"
            android:textSize="@dimen/font_large" />

        <ProgressBar
            android:id="@+id/progressBar_intistate"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="64dp"
            android:background="@color/pink_btn" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_monthlyused_intistate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="本月已用xxx元"
                android:textColor="@color/pink_btn"
                android:textSize="@dimen/font_normal" />

            <TextView
                android:id="@+id/tv_monthlylimite_intistate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="88dp"
                android:layout_marginTop="10dp"
                android:text="每月额度xxx元"
                android:textColor="@color/pink_btn"
                android:textSize="@dimen/font_normal" />
        </LinearLayout>
        
        <Button 
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="回主界面"
            style="@style/common_button_style_pink"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:id="@+id/btn_intimatepaystate_tointimatemain"/>
    </LinearLayout>

</LinearLayout>