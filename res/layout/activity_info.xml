<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/formal_activity_background"
    android:orientation="vertical" >

    <include layout="@layout/title_back_and_title" >
    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@color/color_white" >

            <ImageView
                android:id="@+id/portraiit_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_launcher" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            android:background="@color/color_white"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/name" />

            <TextView
                android:layout_width="64dp"
                android:layout_height="@dimen/text_height"
                android:gravity="center|left"
                android:text="姓名" />

            <TextView
                android:id="@+id/tv_name_info"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/text_height"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="孟嘉琪" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            android:background="@color/color_white"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nickname" />

            <TextView
                android:layout_width="64dp"
                android:layout_height="@dimen/text_height"
                android:gravity="center|left"
                android:text="昵称" />

            <TextView
                android:id="@+id/tv_nickname_info"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/text_height"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Ruby" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            android:background="@color/color_white"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sex" />

            <TextView
                android:layout_width="72dp"
                android:layout_height="@dimen/text_height"
                android:gravity="center|left"
                android:text="性别" />

            <TextView
                android:id="@+id/tv_sex_info"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/text_height"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="男" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="?android:attr/listDivider" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:layout_marginTop="8dp"
        android:background="@color/color_white"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_height"
            android:src="@drawable/account_name" />

        <TextView
            android:layout_width="64dp"
            android:layout_height="@dimen/text_height"
            android:gravity="center|left"
            android:text="账户名" />

        <TextView
            android:id="@+id/tv_account_name_info"
            android:layout_width="70dp"
            android:layout_height="@dimen/text_height"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="11111111111" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:background="@color/color_white"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/phone" />

        <TextView
            android:layout_width="72dp"
            android:layout_height="@dimen/text_height"
            android:gravity="center|left"
            android:text="绑定手机" />

        <TextView
            android:id="@+id/tv_phonenum_info"
            android:layout_width="64dp"
            android:layout_height="@dimen/text_height"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="18066082826" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:id="@+id/layout_to_security"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:background="@color/color_white"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/password" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="@dimen/text_height"
            android:gravity="center|left"
            android:text="账户安全" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="@dimen/text_height"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text=">"
            android:textColor="@color/grey_text" />
 <!-- 点进去是账户安全 -->
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/tv_modify_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:layout_marginTop="8dp"
        android:background="@color/color_white"
        android:gravity="center"
        android:text="修改信息"
        android:textSize="@dimen/font_large" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="?android:attr/listDivider" />

    <Button
        android:id="@+id/tv_exit_login"
        style="@style/common_button_style_green"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="退出登录" />

</LinearLayout>