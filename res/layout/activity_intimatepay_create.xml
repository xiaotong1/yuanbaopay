<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/title_back_and_title" >
    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"       
        android:background="@drawable/intimate_allbg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/chsLmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="200dp"
            android:text="选择额度"
            android:textColor="@color/pink_btn"
            android:textSize="@dimen/font_large" />

        <RadioGroup
            android:id="@+id/rdoGrp_lmt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp
        "
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:contentDescription="额度" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/rdoBtn_limit100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="100" />

                <RadioButton
                    android:id="@+id/rdoBtn_limit200"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="200" />

                <RadioButton
                    android:id="@+id/rdoBtn_limit300"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="300" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/rdoBtn_limit400"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="400" />

                <TextView
                    android:id="@+id/txt_else"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="64dp"
                    android:text="其他:"
                    android:textSize="@dimen/font_normal" />

                <EditText
                    android:id="@+id/edtTxt_limitOther"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:ems="3" >

                    <requestFocus />
                </EditText>
            </LinearLayout>
        </RadioGroup>

        <Button
            android:id="@+id/btn_to_inputkey_intipay"
            style="@style/common_button_style_pink"
            android:layout_width="@dimen/btn_weight_intimate"
            android:layout_height="@dimen/btn_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="开通" />
    </LinearLayout>

</LinearLayout>