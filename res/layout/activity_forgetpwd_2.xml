<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical" >

    <!-- 此处写：重置登录密码 -->

    <include layout="@layout/title_back_and_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/text_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="请提供您的身份信息以供验证"
        android:textSize="@dimen/font_normal"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:layout_marginTop="4dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:background="@color/color_white"
        android:gravity="left|right"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_height"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:gravity="left"
            android:text="真实姓名"
            android:textSize="@dimen/font_medium" />

        <EditText
            android:id="@+id/edtTxt_name_forgetpwd2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_height"
            android:layout_marginLeft="8dp"
            android:background="@null"
            android:hint="请输入您的姓名"
            android:textSize="@dimen/font_medium" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:background="@color/color_white"
        android:gravity="left|right"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_height"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:gravity="left"
            android:text="证件号码"
            android:textSize="@dimen/font_medium" />

        <EditText
            android:id="@+id/edtTxt_idnum_forgetpwd2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_height"
            android:layout_marginLeft="8dp"
            android:background="@null"
            android:hint="请输入您的身份证号"
            android:textSize="@dimen/font_medium" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:background="@color/color_white"
        android:gravity="left|right"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_height"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:gravity="left"
            android:text="手机号码"
            android:textSize="@dimen/font_medium" />

        <EditText
            android:id="@+id/edtTxt_phonenum_forgetpwd2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_height"
            android:layout_marginLeft="8dp"
            android:background="@null"
            android:hint="请输入您的手机号码"
            android:textSize="@dimen/font_medium" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="?android:attr/listDivider" />

    <Button
        android:id="@+id/btn_next_to_forgetpwd3"
        style="@style/common_button_style_green"
        android:layout_width="@dimen/btn_weight"
        android:layout_height="@dimen/btn_height"
        android:layout_marginTop="16dp"
        android:text="下一步" />

</LinearLayout>